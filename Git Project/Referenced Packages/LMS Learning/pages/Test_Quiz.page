<apex:page standardController="lmscons__Quiz__c" extensions="lmscons.QuizContentDetailExt">
<style type="text/css">
.m-nowrap-btns a.btn,
.m-nowrap-btns a.btnDisabled {display:inline-block; white-space: nowrap; text-align:center; margin:1px; //display:inline; //zoom:1}
.b-progress-box {width:154px;}
	.b-progress-box .percentage {width:40px}
</style>

<apex:form >

<div class="pbBody">
<table cellspacing="0" cellpadding="0" border="0" class="list" style="width:100%">
	<colgroup span="5"></colgroup>
	<thead class="rich-table-thead">
		<tr class="headerRow ">
			<th colspan="1" scope="col" class="headerRow">
				<div>{!$Label.MyTraining_Name}</div>
			</th>
			<th colspan="1" scope="col" class="headerRow">
				<div>{!$Label.Assignments_Status}</div>
			</th>
			<th colspan="1" scope="col" class="headerRow">
				<div>{!$Label.Assignments_Progress}</div>
			</th>
			<th colspan="1" scope="col" class="headerRow">
				<div>{!$Label.Assignments_Score}</div>
			</th>
			<th colspan="1" scope="col" class="headerRow">
				<div>{!$Label.Action}</div>
			</th>
		</tr>
	</thead>
	<tbody>
		<tr onfocus="if (window.hiOn){hiOn(this);}" onblur="if (window.hiOff){hiOff(this);}" onmouseout="if (window.hiOff){hiOff(this);} " onmouseover="if (window.hiOn){hiOn(this);} " class="dataRow even  first">
			<td width="60%" colspan="1" class="dataCell">
				<apex:outputField value="{!Module.lmscons__Title__c}" />
			</td>
			<td width="80px" colspan="1" class="dataCell">
				<apex:outputField value="{!Module.lmscons__Status_Progress__c}" rendered="true"/>
			</td>
			<td width="180px" colspan="1" class="dataCell">
				<div class="b-progress-box">
					<c:ProgressBar percent="{!IF(ISNULL(Module.lmscons__Percent_Complete__c),0,Module.lmscons__Percent_Complete__c)}"  ispath="false" score="{!Module.lmscons__Score__c}" />
				</div>
			</td>
			<td width="60px">
				<apex:outputText value="{!Module.lmscons__Score__c}" rendered="{!Module.Quiz__r.lmscons__Show_Score__c}"/>
			</td>
			<td width="270px" style="text-align: left" colspan="1" class="dataCell m-nowrap-btns">
				<apex:commandLink action="{!testLink}" rendered="{!IF(AND(ListQuestions.size>0,isConsumerUser,isConsumerAdmin),true,false)}" value="{!$Label.Test_Quiz}" target="_blank" onclick="myAlert1()" id="theCommandLink" styleClass="btn" style="text-decoration:none"/>
				<apex:commandLink action="{!testLink}" rendered="{!IF(AND(ListQuestions.size==0,isConsumerUser,isConsumerAdmin),true,false)}" value="{!$Label.Test_Quiz}" onclick="myAlert2()" id="theCommandLink2" styleClass="btn" style="text-decoration:none"/>
				<apex:outputLink id="verifiedButton" rendered="{!IF(Module.lmscons__verified__c,false, true)}" value="{!$Page.lmscons__QuizDetail}?id={!Module.id}&verified=1" style="text-decoration:none" target="_parent" styleClass="{!IF(AND(Module.lmscons__Test_Course__c,isConsumerUser,isConsumerAdmin),'btn','btnDisabled')}" onclick="{!IF(AND(Module.lmscons__Test_Course__c,isConsumerUser,isConsumerAdmin),'return verified(this)','return false;')}">{!$Label.Verify_Quiz}</apex:outputLink>
				<span style="display:{!IF(Module.verified__c==true,'none', 'none')}" id="Status">
					<img src="/img/loading.gif" />
					{!$Label.Please_wait}...
				</span>
			</td>
		</tr>
	</tbody>
</table>
</div>
	<apex:actionFunction action="{!doSave}" name="doSave" oncomplete="refreshPage()"/>
</apex:form>

<script>

function newVersion() {
	top.Lightbox();
	top.getValueBool = true;
}

function refreshPage(){
	top.location = '{!JSENCODE($Page.QuizDetail)}?id={!JSENCODE(Quiz.id)}&verified=1';
}

function myAlert1() {
	alert("{!JSENCODE($Label.testCourse)}");
}
function myAlert2() {
	alert("Quiz without questions cannot be assigned!");
}

function verified(o){
	if(confirm("{!JSENCODE($Label.Verified)}")){
		doSave('true');
		o.style.display = 'none';

		document.getElementById('Status').style.display = 'inline';

		return false;
	} else {
		return false;
	}
}
</script>

</apex:page>